{
  "extends": ["stylelint-config-recommended", "stylelint-config-standard"],
  "rules": {
    "indentation": 2,
    "declaration-colon-newline-after": null,
    "value-list-comma-newline-after": "never-multi-line",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["function", "if", "each", "include", "mixin", "for"]
      }
    ]
  }
}
